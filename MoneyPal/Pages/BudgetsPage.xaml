<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MoneyPal.Models"
             x:Class="MoneyPal.Pages.BudgetsPage"
             Title="Budgetten">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="20">
            <Label x:Name="SummaryLabel"
                   Grid.Column="0"
                   TextColor="{StaticResource TextSecondary}"
                   FontSize="14"
                   VerticalOptions="Center"
                   IsVisible="False" />

            <Button Grid.Column="1"
                    Text="âž•"
                    Style="{StaticResource PrimaryButton}"
                    VerticalOptions="Center"
                    Clicked="OnAddBudgetClicked"
                    WidthRequest="50"
                    HeightRequest="50" />
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="ContentLayout" Spacing="15" Padding="20,0,20,20">

                <!-- Summary Cards -->
                <Grid x:Name="SummaryGrid" ColumnDefinitions="*,*,*" ColumnSpacing="10" IsVisible="False">
                    <!-- Total Budget -->
                    <Frame Grid.Column="0" Style="{StaticResource CardFrame}" Margin="0" Padding="12">
                        <VerticalStackLayout Spacing="5">
                            <Label x:Name="TotalHeaderLabel" Text="Totaal" TextColor="{StaticResource TextSecondary}" FontSize="12" />
                            <Label x:Name="TotalBudgetLabel" Text="â‚¬ 0" TextColor="{StaticResource Primary}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Fixed Expenses -->
                    <Frame Grid.Column="1" Style="{StaticResource CardFrame}" Margin="0" Padding="12">
                        <VerticalStackLayout Spacing="5">
                            <Label x:Name="FixedHeaderLabel" Text="Vast" TextColor="{StaticResource TextSecondary}" FontSize="12" />
                            <Label x:Name="FixedBudgetLabel" Text="â‚¬ 0" TextColor="{StaticResource Warning}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Flexible Budget -->
                    <Frame Grid.Column="2" Style="{StaticResource CardFrame}" Margin="0" Padding="12">
                        <VerticalStackLayout Spacing="5">
                            <Label x:Name="FlexibleHeaderLabel" Text="Flexibel" TextColor="{StaticResource TextSecondary}" FontSize="12" />
                            <Label x:Name="FlexibleBudgetLabel" Text="â‚¬ 0" TextColor="{StaticResource Success}" FontSize="20" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Empty State -->
                <VerticalStackLayout x:Name="EmptyState" IsVisible="False" Spacing="20" Padding="40" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="ðŸ’°" FontSize="64" HorizontalOptions="Center" />
                    <Label x:Name="NoBudgetsLabel"
                           Text="Geen budgetten"
                           TextColor="{StaticResource TextPrimary}"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label x:Name="AddFirstBudgetLabel"
                           Text="Maak je eerste budget aan om je uitgaven te volgen"
                           TextColor="{StaticResource TextSecondary}"
                           FontSize="14"
                           HorizontalOptions="Center" />
                    <Button x:Name="AddBudgetButton"
                            Text="âž• Budget toevoegen"
                            Style="{StaticResource PrimaryButton}"
                            Clicked="OnAddBudgetClicked" />
                </VerticalStackLayout>

                <!-- Budgets List -->
                <CollectionView x:Name="BudgetsCollection" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Budget">
                            <Frame Style="{StaticResource CardFrame}" Padding="16">
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="12">

                                    <!-- Budget Icon -->
                                    <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                           Padding="0"
                                           CornerRadius="12"
                                           BackgroundColor="{StaticResource Success}"
                                           BorderColor="Transparent"
                                           HasShadow="False"
                                           WidthRequest="56"
                                           HeightRequest="56"
                                           VerticalOptions="Start">
                                        <Label Text="ðŸ’°"
                                               FontSize="28"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>

                                    <!-- Header: Name, Badge and Amount -->
                                    <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                        <HorizontalStackLayout Grid.Column="0" Spacing="8" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   TextColor="{StaticResource TextPrimary}"
                                                   FontSize="17"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="TailTruncation" />
                                            <Frame IsVisible="{Binding CountAsFixedExpense}"
                                                   BackgroundColor="{StaticResource Warning}"
                                                   Padding="6,3"
                                                   CornerRadius="6"
                                                   HasShadow="False"
                                                   VerticalOptions="Center">
                                                <Label Text="VAST"
                                                       TextColor="White"
                                                       FontSize="9"
                                                       FontAttributes="Bold" />
                                            </Frame>
                                        </HorizontalStackLayout>

                                        <Label Grid.Column="1"
                                               Text="{Binding Amount, StringFormat='â‚¬ {0:N2}'}"
                                               TextColor="{StaticResource Primary}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center" />
                                    </Grid>

                                    <!-- Description -->
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Description}"
                                           TextColor="{StaticResource TextSecondary}"
                                           FontSize="13"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2" />

                                    <!-- Actions -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Spacing="8" HorizontalOptions="End">
                                        <Button Text="âœï¸"
                                                BackgroundColor="Transparent"
                                                TextColor="{StaticResource Primary}"
                                                FontSize="20"
                                                Padding="8"
                                                Margin="0"
                                                Clicked="OnEditBudgetClicked"
                                                CommandParameter="{Binding .}" />

                                        <Button Text="ðŸ—‘ï¸"
                                                BackgroundColor="Transparent"
                                                TextColor="{StaticResource Error}"
                                                FontSize="20"
                                                Padding="8"
                                                Margin="0"
                                                Clicked="OnDeleteBudgetClicked"
                                                CommandParameter="{Binding .}" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
