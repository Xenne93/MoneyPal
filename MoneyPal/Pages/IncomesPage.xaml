<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MoneyPal.Models"
             x:Class="MoneyPal.Pages.IncomesPage"
             Title="Inkomsten">

    <Grid RowDefinitions="Auto,*">

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="20">
            <Label x:Name="SubtitleLabel"
                   Grid.Column="0"
                   TextColor="{StaticResource TextSecondary}"
                   FontSize="14"
                   VerticalOptions="Center"
                   IsVisible="False" />

            <Button Grid.Column="1"
                    Text="âž•"
                    Style="{StaticResource PrimaryButton}"
                    VerticalOptions="Center"
                    Clicked="OnAddIncomeClicked"
                    WidthRequest="50"
                    HeightRequest="50" />
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="ContentLayout" Spacing="15" Padding="20,0,20,20">

                <!-- Summary Card -->
                <Frame Style="{StaticResource CardFrame}" Padding="16">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Frame Grid.Column="0"
                               Padding="0"
                               CornerRadius="12"
                               BackgroundColor="{StaticResource Success}"
                               BorderColor="Transparent"
                               HasShadow="False"
                               WidthRequest="56"
                               HeightRequest="56"
                               VerticalOptions="Center">
                            <Label Text="ðŸ’°"
                                   FontSize="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>

                        <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                            <Label x:Name="TotalMonthlyIncomeLabel"
                                   Text="Totaal Maandelijks Inkomen"
                                   TextColor="{StaticResource TextSecondary}"
                                   FontSize="13" />
                            <Label x:Name="TotalIncomeLabel"
                                   Text="â‚¬ 0,00"
                                   TextColor="{StaticResource Success}"
                                   FontSize="24"
                                   FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Empty state -->
                <VerticalStackLayout x:Name="EmptyState" IsVisible="False" Spacing="20" Padding="40" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="ðŸ’µ" FontSize="64" HorizontalOptions="Center" />
                    <Label x:Name="NoIncomesLabel"
                           Text="Geen inkomsten"
                           TextColor="{StaticResource TextPrimary}"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label x:Name="AddFirstIncomeLabel"
                           Text="Voeg je eerste inkomen toe om je financiÃ«n te tracken"
                           TextColor="{StaticResource TextSecondary}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    <Button x:Name="AddIncomeButton"
                            Text="âž• Inkomen toevoegen"
                            Style="{StaticResource PrimaryButton}"
                            Clicked="OnAddIncomeClicked" />
                </VerticalStackLayout>

                <!-- Incomes list -->
                <CollectionView x:Name="IncomesCollection" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Income">
                            <Frame Style="{StaticResource CardFrame}" Padding="16">
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="12">

                                    <!-- Category Icon -->
                                    <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                           Padding="0"
                                           CornerRadius="12"
                                           BackgroundColor="{StaticResource Success}"
                                           BorderColor="Transparent"
                                           HasShadow="False"
                                           WidthRequest="56"
                                           HeightRequest="56"
                                           VerticalOptions="Start">
                                        <Label Text="ðŸ’µ"
                                               FontSize="28"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>

                                    <!-- Header: Name and Amount -->
                                    <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                        <Label Grid.Column="0"
                                               Text="{Binding Name}"
                                               TextColor="{StaticResource TextPrimary}"
                                               FontSize="17"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"
                                               LineBreakMode="TailTruncation" />

                                        <Label Grid.Column="1"
                                               Text="{Binding Amount, StringFormat='â‚¬ {0:N2}'}"
                                               TextColor="{StaticResource Success}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center" />
                                    </Grid>

                                    <!-- Description and Category -->
                                    <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="10">
                                        <Label Text="{Binding Description}"
                                               TextColor="{StaticResource TextSecondary}"
                                               FontSize="13"
                                               LineBreakMode="TailTruncation"
                                               VerticalOptions="Center"
                                               HorizontalOptions="StartAndExpand" />

                                        <Frame BackgroundColor="{StaticResource Success}"
                                               Padding="6,3"
                                               CornerRadius="6"
                                               HasShadow="False"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding Category}"
                                                   TextColor="White"
                                                   FontSize="10"
                                                   FontAttributes="Bold" />
                                        </Frame>
                                    </HorizontalStackLayout>

                                    <!-- Footer: Day and Actions -->
                                    <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                                        <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                                            <Label Text="ðŸ“…"
                                                   FontSize="14"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding DayOfMonth, StringFormat='Dag {0}'}"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="13"
                                                   VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <Button Grid.Column="1"
                                                Text="âœï¸"
                                                BackgroundColor="Transparent"
                                                TextColor="{StaticResource Primary}"
                                                FontSize="20"
                                                Padding="8"
                                                Margin="0"
                                                Clicked="OnEditIncomeClicked"
                                                CommandParameter="{Binding .}" />

                                        <Button Grid.Column="2"
                                                Text="ðŸ—‘ï¸"
                                                BackgroundColor="Transparent"
                                                TextColor="{StaticResource Error}"
                                                FontSize="20"
                                                Padding="8"
                                                Margin="0"
                                                Clicked="OnDeleteIncomeClicked"
                                                CommandParameter="{Binding .}" />
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
