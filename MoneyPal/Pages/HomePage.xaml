                <Label x:Name="DateLabel"
                       TextColor="{StaticResource TextSecondary}"
                       FontSize="14" />
            </VerticalStackLayout>

            <!-- Stats Grid -->
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="10"
                  RowSpacing="10"
                  Padding="20,0">

                <!-- Bank Account Card -->
