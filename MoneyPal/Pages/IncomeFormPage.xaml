<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyPal.Pages.IncomeFormPage"
             Title="Inkomen">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label x:Name="PageTitle" Text="Nieuw Inkomen"
                   Style="{StaticResource PageTitleLabel}" />

            <!-- Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Naam" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Entry x:Name="NameEntry" Placeholder="Bijv. Salaris" />
            </VerticalStackLayout>

            <!-- Amount -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Bedrag" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Entry x:Name="AmountEntry"
                       Placeholder="0,00"
                       Keyboard="Numeric" />
            </VerticalStackLayout>

            <!-- Day of Month -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Dag van de maand" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Entry x:Name="DayEntry"
                       Placeholder="1-31"
                       Keyboard="Numeric" />
            </VerticalStackLayout>

            <!-- Category -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Categorie" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Picker x:Name="CategoryPicker"
                        TextColor="{StaticResource TextPrimary}"
                        BackgroundColor="{StaticResource Surface}">
                    <Picker.Items>
                        <x:String>Salaris</x:String>
                        <x:String>Subsidie</x:String>
                        <x:String>Terugave</x:String>
                        <x:String>Bonus</x:String>
                        <x:String>Freelance</x:String>
                        <x:String>Investering</x:String>
                        <x:String>Anders</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>

            <!-- Description -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Beschrijving (optioneel)" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Editor x:Name="DescriptionEditor"
                        Placeholder="Voeg een beschrijving toe..."
                        HeightRequest="100"
                        BackgroundColor="{StaticResource Surface}"
                        TextColor="{StaticResource TextPrimary}" />
            </VerticalStackLayout>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="End" Margin="0,20,0,0">
                <Button Text="Annuleren"
                        Style="{StaticResource SecondaryButton}"
                        Clicked="OnCancelClicked" />
                <Button Text="Opslaan"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnSaveClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
