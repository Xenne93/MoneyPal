<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyPal.Pages.SettingsPage"
             x:Name="SettingsPageRoot"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- General Section -->
            <VerticalStackLayout Spacing="0" Margin="0,20,0,0">
                <!-- Section Header -->
                <Label x:Name="GeneralSectionLabel"
                       Text="General"
                       TextColor="{StaticResource Primary}"
                       FontSize="14"
                       FontAttributes="Bold"
                       Margin="20,0,20,12"
                       Opacity="0.9" />

                <!-- Language Setting -->
                <Border BackgroundColor="{StaticResource Surface}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 16"
                        Margin="20,0,20,0">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2" />
                    </Border.Shadow>
                    <Grid Padding="20,16" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                        <!-- Icon -->
                        <Border Grid.Column="0"
                                BackgroundColor="{StaticResource Primary}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                WidthRequest="44"
                                HeightRequest="44"
                                VerticalOptions="Center">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Opacity="0.25" Radius="6" Offset="0,2" />
                            </Border.Shadow>
                            <Label Text="ðŸŒ"
                                   FontSize="24"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <!-- Label and Value -->
                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label x:Name="LanguageLabel"
                                   Text="Language"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Label x:Name="CurrentLanguageLabel"
                                   Text="English"
                                   TextColor="{StaticResource TextSecondary}"
                                   FontSize="14"
                                   Opacity="0.8" />
                        </VerticalStackLayout>

                        <!-- Arrow Icon -->
                        <Label Grid.Column="2"
                               Text="â€º"
                               TextColor="{StaticResource TextSecondary}"
                               FontSize="28"
                               VerticalOptions="Center"
                               Opacity="0.5" />

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLanguageSettingTapped" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- About Section -->
            <VerticalStackLayout Spacing="0" Margin="0,32,0,0">
                <!-- Section Header -->
                <Label x:Name="AboutSectionLabel"
                       Text="About"
                       TextColor="{StaticResource Primary}"
                       FontSize="14"
                       FontAttributes="Bold"
                       Margin="20,0,20,12"
                       Opacity="0.9" />

                <!-- Version Info -->
                <Border BackgroundColor="{StaticResource Surface}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 16"
                        Margin="20,0,20,0">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2" />
                    </Border.Shadow>
                    <Grid Padding="20,16" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                        <!-- Icon -->
                        <Border Grid.Column="0"
                                BackgroundColor="{StaticResource Success}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                WidthRequest="44"
                                HeightRequest="44"
                                VerticalOptions="Center">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Success}" Opacity="0.25" Radius="6" Offset="0,2" />
                            </Border.Shadow>
                            <Label Text="ðŸ’°"
                                   FontSize="24"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <!-- Label and Value -->
                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label x:Name="VersionLabel"
                                   Text="Version"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Label x:Name="VersionNumberLabel"
                                   Text="1.0.0"
                                   TextColor="{StaticResource TextSecondary}"
                                   FontSize="14"
                                   Opacity="0.8" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
