<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyPal.Pages.BudgetFormPage"
             Title="Budget">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label x:Name="PageTitle" Text="Nieuw Budget"
                   Style="{StaticResource PageTitleLabel}" />

            <!-- Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Naam" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Entry x:Name="NameEntry" Placeholder="Bijv. Boodschappen" />
            </VerticalStackLayout>

            <!-- Amount -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Bedrag" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Entry x:Name="AmountEntry"
                       Placeholder="0,00"
                       Keyboard="Numeric" />
            </VerticalStackLayout>

            <!-- Description -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Beschrijving (optioneel)" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" />
                <Editor x:Name="DescriptionEditor"
                        Placeholder="Voeg een beschrijving toe..."
                        HeightRequest="100"
                        BackgroundColor="{StaticResource Surface}"
                        TextColor="{StaticResource TextPrimary}" />
            </VerticalStackLayout>

            <!-- Count as Fixed Expense -->
            <Frame BackgroundColor="{StaticResource Surface}"
                   BorderColor="{StaticResource Primary}"
                   Padding="15"
                   CornerRadius="12"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="15">
                    <CheckBox x:Name="FixedExpenseCheckbox"
                              Color="{StaticResource Primary}" />
                    <VerticalStackLayout Spacing="5" HorizontalOptions="FillAndExpand">
                        <Label Text="Meetellen als vaste last"
                               TextColor="{StaticResource TextPrimary}"
                               FontSize="14"
                               FontAttributes="Bold" />
                        <Label Text="Dit budget wordt meegeteld als verplichte maandelijkse uitgave"
                               TextColor="{StaticResource TextSecondary}"
                               FontSize="12"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="End" Margin="0,20,0,0">
                <Button Text="Annuleren"
                        Style="{StaticResource SecondaryButton}"
                        Clicked="OnCancelClicked" />
                <Button Text="Opslaan"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnSaveClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
